{
  "openapi": "3.0.0",
  "info": {
    "version": "1.0.0",
    "title": "Swagger TreatOptions",
    "description": "Treatment Options REST API",
    "contact": {
      "url": "http://standardhealthrecord.org",
      "email": "gquinn@mitre.org"
    }
  },
  "servers": [
    {
      "url": "http://localhost:3001/api"
    }
  ],
  "paths": {
    "/treatmentOptions": {
      "get": {
        "summary": "Get treatment options given filters",
        "description": "Return treatment options for the following filters",
        "operationId": "findTreatmentOptionsByCriteria",
        "parameters": [
          {
            "name": "Disease",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "Criteria",
            "in": "query",
            "required": false,
            "description": "Criteria as name/value pair on object",
            "schema": {
              "$ref": "#/components/schemas/Criteria"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "array of treatment options for given filters",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/TreatmentOptions"
                  }
                }
              }
            },
            "headers": {
              "Access-Control-Allow-Origin": {
                "schema": {
                  "type": "string",
                  "default": "*"
                },
                "description": "Setting this header to `*` allows all origins. This is handy for public REST APIs that don't require authentication. But, according to the HTTP spec, browsers *WILL NOT* send cookies if this header is `*`, regardless of what you set `Access-Control-Allow-Credentials` to.\n"
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Criteria": {
        "type": "object",
        "properties": {
          "AgeAtDiagnosis": {
            "type": "integer"
          },
          "Gender": {
            "type": "string"
          },
          "Race": {
            "type": "string"
          }
        },
        "additionalProperties": {
          "type": "string"
        },
        "example": {
          "AgeAtDiagnosis": 54,
          "Gender": "male",
          "Race": "white",
          "KIT": "positive",
          "PDGFRA": "negative",
          "Grade": "3",
          "Stage": "IIIA"
        }
      },
      "TreatmentOptions": {
        "type": "object",
        "properties": {
          "disease": {
            "type": "string",
            "description": "disease filter"
          },
          "race": {
            "type": "string",
            "description": "race filter"
          },
          "isAlive": {
            "type": "string",
            "description": "dead or alive"
          },
          "survivalMonths": {
            "type": "integer",
            "format": "int32",
            "description": "survival time in months"
          },
          "dxGrade": {
            "type": "string",
            "description": "grade of the disease to filter"
          },
          "treatOptions": {
            "type": "string",
            "description": "treatment option recieved"
          }
        }
      }
    }
  }
}